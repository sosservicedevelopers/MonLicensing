@page "/districtlist"
@attribute [Authorize]


@using System.Linq.Dynamic.Core


@using Microsoft.AspNetCore.Identity;
@using MonLicensing.Data
@using MonLicensing.Models
@using Radzen.Blazor;
@inject UserManager<ApplicationUser> _userManager;

@inject ApplicationDbContext db


<h3>Процессы</h3>
<button class="btn btn-success" @onclick="AddNew">Добавить новый</button>
<RadzenGrid AllowFiltering="true" FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive" AllowPaging="true" PageSize="10"
            AllowSorting="true" Data="@сonclusions" TItem="District" ColumnWidth="150px">
    <Columns>
        <RadzenGridColumn TItem="District" Property="Name" Title="Наименование"></RadzenGridColumn>
        <RadzenGridColumn TItem="District" Property="Region" Title="Примечание"></RadzenGridColumn>

        @*<RadzenGridColumn TItem="IdentityRole" Bubble="false" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="100px">*@
        <RadzenGridColumn TItem="District" TextAlign="Radzen.TextAlign.Center" Title="Редактировать" Width="60px">
            <Template Context="сonclusion">
                <RadzenButton Click="@(args => Edit(сonclusion))"> <span class="oi oi-pencil" aria-hidden="true"></span> </RadzenButton>
            </Template>
        </RadzenGridColumn>
        <RadzenGridColumn TItem="District" TextAlign="Radzen.TextAlign.Center" Title="Удалить" Width="60px">
            <Template Context="сonclusion">
                <RadzenButton Click="@(args => Delete(сonclusion))"><span class="oi oi-trash" aria-hidden="true"></span></RadzenButton>
            </Template>
        </RadzenGridColumn>
    </Columns>
</RadzenGrid>

<h1>Dropdown</h1>
<RadzenDropDownDataGrid TValue="string" FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" AllowFiltering="true" AllowClear="true"
                        Data="@(customers.Select(c => new { RegionID = c.Id, Region = c.Name }).Distinct().AsQueryable())"
                        TextProperty="Region" ValueProperty="RegionId" Style="margin-bottom: 20px"
                        Change="@(args => Change(args, "DropDownDataGrid"))" />

@if (ShowPopup)
{
    <div class="modal" tabindex="-1" style="display:block" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">@title</h3>
                    <button type="button" class="close"
                            @onclick="ClosePopup">
                        <span aria-hidden="true">X</span>
                    </button>
                </div>
                <div class="modal-body">
                    <span style="color:red">@strError</span>
                    <table class="table">
                        <tr>
                            <td>Наименование</td>
                            <td><input type="text" class="form-control" @bind="@сonclusion.Name" /></td>
                        </tr>

                        <tr>
                            <td>Примечание</td>
                         
                        </tr>
                        <tr>
                            <td>
                                <button class="btn btn-primary" @onclick="Save">
                                    Сохранить
                                </button>
                            </td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>
    </div>
}


@code {

    private List<District> сonclusions = new List<District>();

    private District сonclusion = new District();


    IEnumerable<Region> customers;

    IEnumerable<string> multipleValues;
    string value;

    int count;
    IEnumerable<Region> customCustomersData;

    protected override void OnInitialized()
    {
        customers = db.Region.ToList();
    }

    Dictionary<DateTime, string> events = new Dictionary<DateTime, string>();

    void Change(object value, string name)
    {
        var str = value is IEnumerable<object> ? string.Join(", ", (IEnumerable<object>)value) : value;

        events.Add(DateTime.Now, $"{name} value changed to {str}");
        StateHasChanged();
    }

    void LoadData(LoadDataArgs args)
    {
        var query = db.Region.AsQueryable();

        if (!string.IsNullOrEmpty(args.Filter))
        {
            query = query.Where(c => c.Name.Contains(args.Filter));
        }

        count = query.Count();

        if (!string.IsNullOrEmpty(args.OrderBy))
        {
            query = query.OrderBy(args.OrderBy);
        }

        if (args.Skip != null)
        {
            query = query.Skip(args.Skip.Value);
        }

        if (args.Top != null)
        {
            query = query.Take(args.Top.Value);
        }

        customCustomersData = query;

        InvokeAsync(StateHasChanged);
    }





    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }
    System.Security.Claims.ClaimsPrincipal CurrentUser;

    ApplicationUser objUser;
    string strError = "";
    string title = "";
    bool ShowPopup = false;


    void AddNew()
    {
        сonclusion = new District();
        сonclusion.Id = 0;
        title = "Новоя запись";
        ShowPopup = true;
    }
    async Task Save()
    {
        try
        {
            if (сonclusion.Id != 0)
            {
                District lt = await db.District.FindAsync(сonclusion.Id);
                lt.Name = сonclusion.Name;
                lt.RegionId = сonclusion.RegionId;
                await db.SaveChangesAsync();
            }
            else
            {
                db.District.Add(сonclusion);
                await db.SaveChangesAsync();
            }

            ShowPopup = false;
            LoadData();
        }
        catch (Exception ex)
        {
            strError = ex.GetBaseException().Message;
        }
    }
    async Task Edit(District lt)
    {
        title = "Редактирование";
        сonclusion = lt;
        ShowPopup = true;
    }
    async Task Delete(District lt)
    {
        ShowPopup = false;
        var obj = await db.District.FindAsync(lt.Id);
        if (obj != null)
        {
            db.District.Remove(obj);
            await db.SaveChangesAsync();
        }
        LoadData();
    }
    void ClosePopup()
    {
        ShowPopup = false;
    }

    protected override async Task OnInitializedAsync()
    {
        // CurrentUser = (await authenticationStateTask).User;
        // objUser = await _userManager.FindByNameAsync(CurrentUser.Identity.Name);
        LoadData();
    }

    public void LoadData()
    {
        сonclusion = new District();
        сonclusions = db.District.OrderBy(x => x.Name).ToList();

    }






}
